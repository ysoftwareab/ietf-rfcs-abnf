message         = [email / token]

TCHAR           = %x20..3F / %x41..7E
                       ;; any printable US-ASCII character except '@'

email           = addr-spec
                       ;; as defined in RFC 822, except with no free
                       ;; insertion of linear-white-space, and the
                       ;; local-part MUST either be entirely enclosed in
                       ;; quotes or entirely unquoted

token           = 1*255TCHAR

