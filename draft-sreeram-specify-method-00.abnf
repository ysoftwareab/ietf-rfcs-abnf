SPECIFYm                  = %x53.50.45.43.49.46.59; SPECIFY in caps
extension-method          = SPECIFYm / token

Condition                 = "Condition" HCOLON condition-type
                                *( SEMI condition-param )
condition-type            = "graceful"
                              / "forced"
                              / "failover"
                              / "overload"
                              / condition-type-extension
condition-type-extension  = token
condition-param           = generic-param / overload-condition-parm
overload-condition-parm   = "cleared"
Timer                     = "Timer" HCOLON delta-seconds
delta-seconds             = 1*DIGIT
