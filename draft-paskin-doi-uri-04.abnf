doi-uri        = scheme ":" encoded-doi [ "?" query ]  
                                               [ "#" fragment ] 
      
scheme         = "doi"  
      
encoded-doi    = prefix "/" suffix  
      
prefix         = segment 
      
suffix         = segment *( "/" segment ) 

   
   
   
   
      
segment        = *pchar 
      
query          = *( pchar / "/" / "?" ) 
      
fragment       = *( pchar / "/" / "?" ) 
      
pchar          = unreserved / escaped / ";" / 
                        ":" / "@" / "&" / "=" / "+" / "$" / "," 
      
unreserved     = ALPHA / DIGIT / mark 
      
escaped        = "%" HEXDIG HEXDIG 
      
mark           = "-" / "_" / "." / "!" / "~" / "*" / "'" / 
                        "(" / ")" 
   
