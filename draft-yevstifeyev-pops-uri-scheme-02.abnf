pops-uri    = pops-scheme ":" pops-hier-part
pops-scheme = "pops"
pops-hier-part = "//" [user-auth "@"] host [":" port] ["/"]
user-auth   = user [auth]
user        = 1*achar
auth        = ";AUTH=" ("*" / auth-type)
auth-type   = auth-sasl / auth-ext
auth-sasl   = 1*achar
auth-ext    = "+" ("APOP" / 1*achar)
achar       = ALPHA / DIGIT / pct-encoded / "$" / "-" / "_" / "." 
                / "+" / "!" / "'" / "(" / ")" / "," / "=" / "*" / "~" 
                / "&"

