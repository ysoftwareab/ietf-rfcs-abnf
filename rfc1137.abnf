atom-encoded    = *( a-char / a-encoded-char )
a-char          = <any CHAR except specials (other than "@"
                              and "."), SPACE,
                              CTL, "_", and "#">
a-encoded-char  = "_"                   ; (space)
                      / "#u#"                 ; (_)
                      / "#l#"                 ; <(>
                      / "#r#"                 ; <)>
                      / "#m#"                 ; (,)
                      / "#c#"                 ; (:)
                      / "#b#"                 ; (\)
                      / "#h#"                 ; (#)
                      / "#e#"                 ; (=)
                      / "#s#"                 ; (/)
                      / "#" 3DIGIT "#"

