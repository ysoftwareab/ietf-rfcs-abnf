in-reply-to =
       element thr:in-reply-to {
         atomCommonAttributes,
        ( ref, source?
        | href, type?
        | ref, source?, href, type? )
       }

ref = attribute ref { atomURI }
href = attribute href { atomURI }
type = attribute type { atomMediaType }
source = attribute source { atomURI }


