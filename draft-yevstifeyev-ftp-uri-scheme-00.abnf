ftp-uri       = "ftp:" ftp-hier-part
ftp-hier-part = "//" [user-pass "@"] host-port [ftp-path]
user-pass     = user [":" pass]
user          = *usp-char
pass          = *usp-char
usp-char      = *(unreserved / pct-encoded / sub-delims)
host-port     = host [":" port]
ftp-path      = path-abempty [typecode-part]
typecode-part = ";typecode=" typecode
typecode      = "a" / "i" / "d"

