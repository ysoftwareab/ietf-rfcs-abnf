burl-param      = scheme / absoluteURI / trusted-domain
                      ; parameter to BURL EHLO keyword

burl-cmd        = "BURL" SP conversion SP failhow
                        SP absoluteURI CRLF

conversion      = "base64" / "8bit" / "binary" / "none"

failhow         = "now" / "retry"

trusted-domain  = scheme "://" authority


