capability        =/ "X-DRAFT-I00-CREATEPARAM" /
                             "X-DRAFT-I00-CREATEFLAGS"
                           ;;capability is defined in [IMAP4]

create            = "CREATE" SP mailbox [SP partition]
                            [SP create_params]
                            ; Use of INBOX gives a NO error

create_params     = "(" create_param *( SP create_param) ")"

create_param_name = atom
                            ;; IMAPABNF tagged-ext-label?

create_param      = create_param_name SP create_param_value

create_param_value= astring / "(" astring *(SP astring) ")"
                            ;; As SELECT parameters in ANNOTATE.
                            ;; <<This should be updated to match
                            ;; IMAPABNF>>

partition         = [partition_server ":"] partition_local
                            ;; use astring instead?

partition_server  = atom
                            ;; No ":" allowed, unless IPv6 address?

partition_local   = atom
                            ;; No ":" allowed

rename            = "RENAME" SP mailbox SP mailbox
                            [SP partition] [SP rename_params]
                            ;; Use of INBOX as a destination gives
                            ;; a NO error
rename_params     = "(" rename_param *( SP rename_param) ")"

rename_param_name = atom
                            ;; IMAPABNF tagged-ext-label?

rename_param      = rename_param_name SP rename_param_value

rename_param_value= astring / "(" astring *(SP astring) ")"
                            ;; As SELECT parameters in ANNOTATE.
                            ;; <<This should be updated to match
                            ;; IMAPABNF>>


