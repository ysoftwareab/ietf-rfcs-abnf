ftp-uri        = "ftp:" ftp-hier-part
ftp-hier-part  = "//" [ user-pass "@" ] host-port [ ftp-path ]

user-pass      = user [ ":" pass ]
user           = 1*usp-char
pass           = *usp-char
usp-char       = unreserved / pct-encoded / sub-delims

host-port      = host [ ":" port ]

ftp-path       = path-abempty

ftp-path       =/ cwd-part [ "/" name ]
cwd-part       =  *( "/" cwd )
cwd            =  segment
name           =  segment

