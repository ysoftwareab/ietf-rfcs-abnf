Content-Author     =      "Content-Author:" nameaddr-list CRLF

nameaddr-list      =      (name-optaddr * ("," nameaddr))

nameaddr           =      name-optaddr / addr-spec / angle-addr

name-optaddr       =      display-name [angle-addr]

angle-addr         =      [CFWS] "<" addr-spec ">" [CFWS]

display-name       =      phrase

addr-spec          =      local-part "@" domain

phrase             =      1*word
Content-Originator =      "Content-Originator:" mailaddr CRLF

mailaddr           =      optname-addr / addr-spec

optname-addr       =      [display-name] angle-addr

angle-addr         =      [CFWS] "<" addr-spec ">" [CFWS]

display-name       =      phrase

addr-spec          =      local-part "@" domain

phrase             =      1*word


