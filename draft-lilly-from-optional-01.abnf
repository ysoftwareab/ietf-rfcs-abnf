authentic   =  ["From"       ":"   mailbox] ; Single author
                    / ( "Sender"     ":"   mailbox  ; Actual submittor
                      ["From"       ":" 1#mailbox]) ; Multiple authors
                                                    ;  or not sender

resent-authentic =  ["Resent-From"      ":"  mailbox]
                          / ( "Resent-Sender"    ":"   mailbox
                            ["Resent-From"      ":" 1#mailbox] )

