ircURL   = ircURI "://" location "/" [ entity ] [ "?" options ]

ircURI   = "irc" / "ircs"
location = [ authinfo "@" ] hostport
authinfo = [ username ] [ ":" password ]
username = *( escaped / unreserved )

password = *( escaped / unreserved ) [ ";" passtype ]

passtype = ; Reserved for future use.

entity   = [ entname ] [ "," enttype ]

entname  = [ "#" ] *( escaped / unreserved )
enttype  = "isuser" / "ischan"

options  = "?" option *( "&" option )

option   = optname [ "=" optvalue ]

optname  = *( ALPHA / "-" )
optvalue = optparam *( "," optparam )

optparam = *( escaped / unreserved )

userent  = nickhost / userhost

nickhost = nickname [ "%21" username "%40" hostname ]

userhost = username ( unhost / unserver / ( unhost unserver ) )

unhost   = "%25" hostname

unserver = "%40" server

