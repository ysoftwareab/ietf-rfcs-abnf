declaration = boilerplate [formal-record] [comments] trailer

boilerplate = text
formal-record = LF draft-name "state := {" LF states LF "}"
comments = text
trailer = text

draft-name = token
states = 1*part-state
part-state = part ":-" state

part = token
state = token

token = VCHAR *CHAR VCHAR   ; subject to restrictions below

phrase = 1*CHAR
text = 1*phrase

