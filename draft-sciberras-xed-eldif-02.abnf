SAFE-XML-CHAR     =3D %x01-7F / UTF8-2 / UTF8-3 / UTF8-4
                       ; Any UTF8 value, excluding NUL (0x00).
                       ; See section 3.2 for details

XML-STRING        =3D *(SAFE-XML-CHAR)
                       ; See section 3.4 for details

attrval-spec      =3D/ AttributeDescription xml-value-spec SEP
                       ; Extends <attrval-spec> from LDIF
                       ; See section 3.3 for details

xml-value-spec    =3D ">:" FILL SEP SPACE XML-STRING
                       ; See section 3.4 for details

